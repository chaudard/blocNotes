<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="blueBackground">
        <item name="android:background">@color/background</item>
    </style>
    
    <style name="blackText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="optionButton">
        <item name="android:background">@drawable/bluepatche</item>
    </style>

    <style name="hideButton">
        <item name="android:background">@drawable/greenpatche</item>
    </style>

    <style name="translucide">
        <item name="android:background">@color/translucide</item>
    </style>

</resources>
